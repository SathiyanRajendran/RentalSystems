@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
               <img src="~/css/@item.Photo" alt="no data" height="100" width="100"/>

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rentalperday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stocks)
            </td>
            <td>
                <a class="btn-success" asp-action="Edit" asp-route-id="@item.VehicleId">Changes</a> |
                <a class="btn-success" asp-action="Details" asp-route-id="@item.VehicleId">Details</a> |
                <a class="btn-success" asp-action="Delete" asp-route-id="@item.VehicleId">Delete</a>
            </td>
        </tr>
}
